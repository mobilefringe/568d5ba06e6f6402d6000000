<script>
    $(document).ready(function(e) {
        init(e);
        loadMallDataCached(renderAll); 
    });
    function renderAll(){
        var templates = getBlogDataBySlug("home-templates").posts;
        //console.log(templates);
         //renderGeneral('#design_container','#design_template', templates);
         renderGeneral('#premium_design_container','#premium_design_template', sorted_templates);
         renderGeneral('#standard_design_container','#standard_design_template', sorted_templates);
        if(window.location.href.indexOf("#") == -1) {
           window.location.assign("#premium");
        }
        else {
             console.log("bro");
        }
        
        $("#premium").click(function() {
            var sorted_templates = [];
           $.each(templates, function(key, val) {
                $.each( val.tag , function( tag_key, tag ) {
                    //val.taglist = val.taglist + " " + tag;
                    if(tag == "Premium"){
                        sorted_templates.push(val);
                    }
                 });
            });
            //console.log(sorted_templates);
            //$("#design_container").hide();
            $('#premium_design_container').show();
            
        });
        $("#standard").click(function() {
            var sorted_templates = [];
           $.each(templates, function(key, val) {
                $.each( val.tag , function( tag_key, tag ) {
                    //val.taglist = val.taglist + " " + tag;
                    if(tag == "Standard"){
                        sorted_templates.push(val);
                    }
                 });
            });
            console.log(sorted_templates);
            
        
        });
        $("#custom").click(function() {
             var sorted_templates = [];
           $.each(templates, function(key, val) {
                $.each( val.tag , function( tag_key, tag ) {
                    //val.taglist = val.taglist + " " + tag;
                    if(tag == "Custom"){
                        sorted_templates.push(val);
                    }
                 });
            });
            console.log(sorted_templates);
            renderGeneral('#design_container','#design_template', sorted_templates);
       
        });
    }
</script>