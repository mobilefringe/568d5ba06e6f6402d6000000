<script>
    $(function(e) {
        init(e);
        
        var data = [];
        $.ajax({
            url: "//mallmaverick.com/pages/home-blog",
            method: "GET",
            dataType: "json",
        }).then(function(data) {
            console.log(data);
            $('#mm_page_title').html(data.title);
            $('#mm_page_content').html(data.body['#mm_page_subtitle']);
            $('#mm_page_content').html(data.body);
        });
    
    });
</script>